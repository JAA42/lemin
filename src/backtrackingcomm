#include "../inc/lem_in.h"

static int	first_passage(char *history, char *room)
{
	int	i;
	int	j;

	printf("yeah\n");
	j = 0;
	i = 0;
	while (history[i])
	{
		if (history[i] == room[j])
		{
			while (history[i + j] &&
					history[i + j] == room[j] && room[j])
				j++;
			if (room[j] == '\0' &&
					(history[i + j] == '\0' || history[i + j] == '\n'))
				return (0);
			else
				j = 0;
		}
		i++;
	}
	return (1);
}

static t_rooms		*get_index(t_pm *w, char *tube)
{
	t_rooms *ptr;

	ptr = w->first;
	while (ft_strcmp(ptr->name, tube) != 0)
		ptr = ptr->next_room;
	return (ptr);
}

static int	simule_way(t_pm *w, t_rooms *tube, char *way, int len)
{
	t_rooms *ptr;
	char	*tmp;

	printf("=====312, tube->name:%s|\n", tube->name);
	if (printf("b1:tubename:%s\n", tube->name) && ft_strcmp(tube->name, w->exit) == 0)
	{
		printf("------1\n");
		if (len < w->len || w->len == -1)
		{
				w->way = ft_str3join(way, "\n", tube->name);
				w->len = len;
				free(way);
		}
	}
	else if (printf("b2\n") && first_passage(way, tube->name))
	{
		printf("------2\n");
		tmp = ft_str3join_f(way, "\n", tube->name, 0);
		ptr = get_index(w, tube->name);
		printf("-------2B:tube->name:%s\n", ptr->name);
		if (ptr->next_tube)
			simule_way(w, ptr->next_tube, tmp, ++len);
		else
			return (0);
	}
	if (printf("b3\n") && tube->next_tube)
	{
		printf("yep\n");
		simule_way(w, tube->next_tube, way, len);
	}
	return (0);
}

char	*run_algo(t_pm *w)
{
	int	j;
	char	*way;
	t_rooms *ptr_start;
	t_rooms *ptr_tube;

	j = 0;
	if (ft_strcmp(w->entrance, w->exit) == 0)
		return (w->way = ft_strdup_f(w->entrance));
	else
	{
		way = ft_strdup(w->entrance);
		ptr_start = w->first;
		while (ft_strcmp(ptr_start->name, w->entrance) != 0)
		{
			ptr_start = ptr_start->next_room;
		}
		ptr_tube = ptr_start->next_tube;
		while (ptr_tube)
		{
			simule_way(w, ptr_tube, way, 0);
			ptr_tube = ptr_tube->next_tube;
		}
		if (w->len == -1)
			return (NULL);
	}
	return (w->way);
}

